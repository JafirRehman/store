
<h1><%= @product.name %></h1>

<%= link_to "Back", products_path %>
<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>All Comments</h2>
<%= render @product.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form'%>
